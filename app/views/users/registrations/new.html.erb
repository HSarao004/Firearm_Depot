<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: user_registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %> <em>(6 characters minimum)</em><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <h3>User Information</h3>
  <div class="field">
    <%= f.fields_for :user_info do |uf| %>
      <%= uf.label :street %><br />
      <%= uf.text_field :street %>
      
      <%= uf.label :city %><br />
      <%= uf.text_field :city %>
      
      <%= uf.label :province %><br />
      <%= uf.select :province, options_for_select([['AB', 'AB'], ['BC', 'BC'], ['MB', 'MB'], ['NB', 'NB'], ['NL', 'NL'], ['NT', 'NT'], ['NS', 'NS'], ['NU', 'NU'], ['ON', 'ON'], ['PE', 'PE'], ['QC', 'QC'], ['SK', 'SK'], ['YT', 'YT']]) %>
      
      <%= uf.label :postal_code %><br />
      <%= uf.text_field :postal_code %>
      
      <%= uf.label :card_number %><br />
      <%= uf.text_field :card_number %>
      
      <%= uf.label :expiry %><br />
      <%= uf.text_field :expiry %>
      
      <%= uf.label :cvv %><br />
      <%= uf.text_field :cvv %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
