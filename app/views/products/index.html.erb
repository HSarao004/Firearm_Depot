<h1 id="available-products-title">Available Products</h1>

<div class="categories-dropdown">
  <label for="category-select">Select a Category:</label>
  <select id="category-select" onchange="location = this.value;">
    <option value="<%= products_path %>">All Products</option>
    <% Category.all.each do |category| %>
      <option value="<%= category_path(category) %>"><%= category.name %></option>
    <% end %>
  </select>
</div>

<div class="filters">
  <%= link_to 'All Products', products_path %>
  <%= link_to 'New Products', products_path(filter: 'new') %>
  <%= link_to 'Recently Updated Products', products_path(filter: 'recently_updated') %>
</div>

<div class="products">
  <% @products.each do |product| %>
    <div class="product">
      <h2><%= link_to product.name, product_path(product) %></h2>
      <div class="images">
        <%= image_tag product.front_img, size: "100x100", alt: "#{product.name} front view" if product.front_img.present? %>
        <%= image_tag product.leftside_img, size: "100x100", alt: "#{product.name} left side view" if product.leftside_img.present? %>
        <%= image_tag product.rightside_img, size: "100x100", alt: "#{product.name} right side view" if product.rightside_img.present? %>
        <%= image_tag product.back_img, size: "100x100", alt: "#{product.name} back view" if product.back_img.present? %>
      </div>
      <p><%= product.description %></p>
      <p>Price: <%= number_to_currency(product.price) %></p>
    </div>
  <% end %>
</div>

<div class="pagination">
  <%= paginate @products %>
</div>
