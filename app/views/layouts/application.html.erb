<!DOCTYPE html>
<html>
<head>
  <title>FirearmDepot</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <style>
    /* Global Styles */
    body {
      font-family: 'Roboto', sans-serif;
      background-color: #f5f5f5;
      color: #333;
      margin: 0;
      padding: 0;
      line-height: 1.6;
    }

    a {
      text-decoration: none;
      color: #3498db;
    }

    a:hover {
      color: #2980b9;
    }

    nav ul {
      list-style-type: none;
      padding: 10px 20px;
      margin: 0;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      background-color: #2c3e50;
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    nav ul li {
      margin: 0 15px;
    }

    nav ul li a {
      color: #ecf0f1;
      padding: 8px 16px;
      font-weight: bold;
      transition: background-color 0.3s;
    }

    nav ul li a:hover {
      background-color: #34495e;
      border-radius: 4px;
    }

    .categories-dropdown, .filters {
      margin: 20px 0;
      text-align: center;
    }

    .categories-dropdown select, .filters a {
      padding: 10px 15px;
      font-size: 1em;
      border: 1px solid #ddd;
      border-radius: 4px;
      margin: 0 10px;
      transition: background-color 0.3s, border-color 0.3s;
    }

    .categories-dropdown select:hover, .filters a:hover {
      background-color: #3498db;
      color: #fff;
      border-color: #2980b9;
    }

    .products {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
      padding: 20px;
      max-width: 1200px;
      margin: 0 auto;
    }

    .product {
      background-color: #fff;
      border: 1px solid #ddd;
      padding: 15px;
      margin: 10px;
      width: 100%;
      max-width: 250px;
      text-align: center;
      box-sizing: border-box;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      transition: transform 0.3s, box-shadow 0.3s;
    }

    .product:hover {
      transform: translateY(-5px);
      box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.15);
    }

    .product img {
      max-width: 100%;
      height: auto;
      border-radius: 4px;
      margin-bottom: 10px;
    }

    .product h2 {
      font-size: 1.5em;
      color: #2c3e50;
      margin-bottom: 10px;
    }

    .product p {
      font-size: 1.1em;
      color: #7f8c8d;
    }

    .pagination {
      margin-top: 20px;
      text-align: center;
    }

    .pagination a {
      padding: 10px 15px;
      margin: 0 5px;
      background-color: #2c3e50;
      color: #ecf0f1;
      border-radius: 4px;
      transition: background-color 0.3s;
    }

    .pagination a:hover {
      background-color: #34495e;
    }

    .images {
      display: flex;
      justify-content: space-around;
      flex-wrap: wrap;
      margin-bottom: 20px;
    }

    .images img {
      margin: 5px;
      border-radius: 4px;
      transition: transform 0.3s;
    }

    .images img:hover {
      transform: scale(1.05);
    }

    /* Orders Section */
    .order {
      background-color: #fff;
      border: 1px solid #ddd;
      padding: 20px;
      margin-bottom: 20px;
      border-radius: 8px;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .order h3 {
      margin-top: 20px;
      font-size: 1.5em;
      color: #2c3e50;
    }

    .order p, .order li {
      font-size: 1em;
      color: #7f8c8d;
    }

    .order ul {
      list-style-type: none;
      padding-left: 0;
    }

    .order li {
      border-bottom: 1px solid #ddd;
      padding: 5px 0;
    }

    hr {
      border: 0;
      border-top: 1px solid #ccc;
      margin: 20px 0;
    }

    /* Responsive Styles */
    @media (max-width: 768px) {
      .products {
        flex-direction: column;
        align-items: center;
      }

      .product {
        width: 100%;
        margin: 10px 0;
      }

      .images {
        flex-direction: column;
      }

      .images img {
        width: 100%;
        margin-bottom: 10px;
      }

      .order {
        padding: 10px;
      }

      .order p, .order li {
        font-size: 0.9em;
      }

      .order h3 {
        font-size: 1.1em;
      }
    }

    @media (max-width: 480px) {
      .order {
        padding: 8px;
      }

      .order p, .order li {
        font-size: 0.85em;
      }

      .order h3 {
        font-size: 1em;
      }
    }

    @media (min-width: 600px) {
      .product {
        width: calc(50% - 20px);
      }
    }

    @media (min-width: 1024px) {
      .product {
        width: calc(33.33% - 20px);
      }
    }
  </style>
</head>
<body id="<%= controller.controller_name %>-<%= controller.action_name %>">
  <nav>
    <ul>
      <li><%= link_to 'Home', root_path %></li>
      <li><%= link_to 'Products', products_path %></li>
      <li><%= link_to 'Accessories', accessories_path %></li>
      <li><%= link_to 'About', static_page_path(slug: 'about') %></li>
      <li><%= link_to 'Contact', static_page_path(slug: 'contact') %></li>
      <li><%= link_to 'Cart', cart_path %></li>
      <% if user_signed_in? %>
        <li><%= link_to 'Edit User Info', edit_user_info_path %></li>
        <li><%= link_to 'My Orders', orders_path %></li>
        <li><%= link_to 'Admin', admin_root_path %></li>
        <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <li><%= link_to 'Login', new_user_session_path %></li>
      <% end %>
    </ul>
  </nav>

  <%= yield %>
</body>
</html>
