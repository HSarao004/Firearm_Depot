<h1><%= @accessory.name %></h1>
<p><%= @accessory.description %></p>
<p>Price: <%= @accessory.price %></p>
<p>Category: <%= @accessory.category.name %></p>
<%= form_with url: add_to_cart_accessory_path(@accessory), method: :post, local: true do |f| %>
  <%= number_field_tag :quantity, 1, min: 1 %>
  <%= f.submit "Add to Cart" %>
<% end %>
<%= link_to 'Back to Accessories', accessories_path %>
